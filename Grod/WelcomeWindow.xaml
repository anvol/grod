<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Grod.WelcomeWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Grod="clr-namespace:Grod" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Grod"
	Height="600"
	Width="800">
    <Window.Resources>
        <Grod:GrodDbContext x:Key="GrodDb" />
    </Window.Resources>
    <Grid d:DataContext="{d:DesignInstance Grod:GrodDbContext}" DataContext="{StaticResource GrodDb}">
		<Button
			Content="New Post"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="582,10,0,0"
			Height="80"
			Width="200"
			Name="btnNewPost"
			Click="btnNewPost_Click"
			IsDefault="False"></Button>
        <DataGrid HorizontalAlignment="Left" ItemsSource="{Binding LoadedPosts}" Margin="10,10,0,0" VerticalAlignment="Top" Height="550" Width="567" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Created" Binding="{Binding Created}" />
                <DataGridTextColumn Header="Post Title" Binding="{Binding Title}" Width="auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>