<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Grod.EditorWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Grod"
	Height="600"
	Width="800">
	<Grid>
		<Grid.RowDefinitions>
		    <RowDefinition Height="30"/>
			<RowDefinition Height="30"/>
		    <RowDefinition/>
  		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBox AcceptsReturn="False" MaxLines="1" Grid.Column="1" Grid.Row="1" HorizontalScrollBarVisibility="Disabled" />
		<TextBox
			AcceptsReturn="True"
			VerticalScrollBarVisibility="Auto"
			Grid.Column="1"
			Grid.Row="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			/>
	
	</Grid>
</Window>